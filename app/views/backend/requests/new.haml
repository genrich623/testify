%section.body-campaign
  .wrap-two
    .row
      .col-lg-4.col-md-4.col-sm-4.col-xs-12.pull-left
        %h1.step1
          Ask your customers to write testimonials themselves
          %span#campaignName
      .col-lg-4.col-md-4.col-sm-4.col-xs-12
        .tests
          %ul.campaigns-menu.two.nav.navbar-nav.pull-right
            %li#regular-tab.current
              %a.text{:href => ""}
                %i.fa.fa-envelope-o
                Regular
            %li#absplit-tab
              %a.text{:href => ""}
                %i.fa.fa-users
                A/B test
      .col-lg-4.col-md-4.col-sm-4.col-xs-12
        .camp-prog.pull-right
          %div{:style => "display: block"}
            = image_tag('campaign.png')
          #sfIcons.camp-prog-sf1{:style => "display: none"}
          #coIcons.camp-prog-co1{:style => "display:none"}
          #trIcons.camp-prog-tr1{:style => "display: none"}
/ Body section Input
%section.body-campaign-input
  .wrap-three.container-fluid
    .row
      .col-lg-12.col-md-12.col-xs-12.col-sm-12
        #regular
          #campaign-editor
            = form_for @request, url: requests_path do |f|
              #regular-content{:style => ""}
                %ul.primary-form
                  %li
                    %label Sender info
                    .helper-text This is your details as sender
                    .box-wrap
                      = f.text_field :sender, placeholder: "Sender's name",
                                       class: 'title-field width-full first'
                    .box-wrap
                      = f.text_field :reply_to, placeholder: 'reply to address',
                                       class: 'title-field width-full first'
                  %li#regSubject{:style => ""}
                    %label Recipient info
                    .helper-text
                      This is your customer's details
                    .box-wrap
                      = f.text_field :name, autofocus: 'autofocus', placeholder: "Recipient's name",
                                     class: 'clientname-field width-full first'
                    .box-wrap
                      = f.text_area :email, placeholder: "Recipient's email",
                                     class: 'clientname-field width-full first'
                  %li#regSubject{:style => ""}
                    %label Request info
                    .helper-text
                      This is your request for testimonial details
                    .box-wrap
                      = f.text_field :subject, placeholder: 'Email subject',
                                     class: 'clientname-field width-full first'
                    .box-wrap
                      = f.text_area :message, placeholder: 'Request message',
                                     class: 'clientname-field width-full first'
                    = f.submit 'Next', class: 'hidden'
              .primary-form.padding-none
                #submit-wrap.button-cancel.wizard{:style => ""}
                  %button#submitButton.button.primary.huge.forward
                    Send
                    %i.fa.fa-arrow-right