%section.body-section
  .wrap-two.container-fluid
    .row
      .col-lg-10.col-md-9.col-sm-12.col-xs-12
        .table-responsive.leftcol
          %h1
            Automation
          %span.extras
            Request testimonials/reviews from customers
            //  %a{:href => ''} See all saved drafts
          %table#drafts.tableHeader.margin-btm-50.table-hover{:cellpadding => '0', :cellspacing => '0', :width => '100%'}
            %tbody
              %tr.noHighlight
                %th.headerLeft{:style => 'width: 39%;'} Email
                %th{:style => 'width: 18.5%;'} Created
                %th.cellCenter{:style => 'width: 15%;'} Type
                %th.cellCenter{:style => 'width: 15%;'} Status
                %th.cellCenter{:style => 'width: 7%;'} Ready
                %th.headerRight{:style => 'width: 5.5%;'}
              - @requests.each do |request|
                %tr.hover-toggle
                  %td
                    / - if request.ready?
                    /   = link_to request.email, testimonial_path(request.testimonial)
                    / - else
                    /   = request.email
                    / %br/
                    / .clearit
                    = request.email
                  %td
                    = request.created_at.to_formatted_s(:long)
                  %td.cellCenter
                    = request.request_type.titleize
                  %td.cellCenter
                    = request.status
                  %td.cellCenter
                    - if request.ready?
                      = image_tag 'tick.png', alt: 'Yes'
                    - else
                      = image_tag 'minus.png', alt: 'No'
                  %td.cellCenter
                    = link_to request, :method => :delete,
                      :data => { :confirm => 'Do you want to delete request?' } do

                      %span.glyphicon.glyphicon-remove
      .col-lg-2.col-md-3.col-sm-12.col-xs-12
        = render 'layouts/right_bar'
